generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model guestbook {
  id         String @id @default(uuid())
  message    String @db.Text
  ip_address String
  created_at String
  color      String

  @@map("guestbook")
}

model admin {
  id       String @id @default(cuid())
  password String

  @@map("admin")
}
